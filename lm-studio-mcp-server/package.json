{
  "name": "lm-studio-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for seamless integration between Kiro and LM Studio",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "INTEGRATION_TESTS=true jest src/__tests__/integration.test.ts",
    "test:performance": "PERFORMANCE_TESTS=true jest src/__tests__/performance.test.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "npm run build && node scripts/install.js"
  },
  "keywords": ["mcp", "lm-studio", "kiro", "ai", "development"],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  },
  "bin": {
    "lm-studio-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "README.md",
    "LICENSE",
    "lm-studio-mcp.config.example.json",
    ".env.example"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}